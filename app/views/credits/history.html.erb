<% content_for :top_banner do %>
  <div class="container">
    <h1>
      <%= image_tag "/images/contact_person_icon.png", :alt => "Avatar", :width => "16px", :height => "16px" %>
      Purchase History
    </h1>
    <%= render '/activity/tabs' %>
  </div>
<% end %>
<div class="settings_page row">
  <div class="span5 ">
    <div class="track_filters ">
      <ul>
        <li>
          <%= link_to "Settings", edit_user_registration_path %>
        </li>
        <li>
          <%= link_to "Subscription Status", status_subscriptions_path %>
        </li>
        <li class="active">
          <%= link_to "Purchase History", history_credits_path %>
        </li>
      </ul>

      <dl>
        <dt>Last Login:</dt>
        <dd><%= current_user.last_sign_in_at.to_formatted_s :long %> </dd>
      </dl>

      <p><%= link_to "Deactivate your account", user_registration_path, :confirm => "Are you sure?", :method => :delete %>.</p>
    </div>
  </div>
  <div class="span11 ">
    <% if @subscription_payments.present? %>
      <h2>Subscriptions</h2>
      <table>
        <tr>
          <th>Subscription</th>
          <th>Type</th>
          <th>Date</th>
          <th>Receipt</th>
          <th>Total</th>
        </tr>

        <% @subscription_payments.each do |sp| %>
          <tr>
            <td><%= sp.upstream_authorization %></td>
            <td><%= sp.type %></td>
            <td><%= sp.created_at.to_formatted_s(:long) %></td>
            <td><%= link_to 'View', subscription_path(sp) %></td>
            <td><%= number_to_currency (sp.amount) %></td>
          </tr>
        <% end %>
      </table>
    <% end %>
    <h2>Credits</h2>
    <table>
      <tr>
        <th>Credits</th>
        <th>Type</th>
        <th>Date</th>
        <th>Receipt</th>
        <th>Total</th>
      </tr>

      <% @credit_adjustments.each do |ca| %>
        <tr>
          <td><%= ca.value %></td>
          <td><%= ca.type %></td>
          <td><%= ca.created_at.to_formatted_s(:long) %></td>
          <td><%= link_to 'View', credit_path(ca) %></td>
          <td><%= number_to_currency (ca.amount) %></td>
        </tr>
      <% end %>
    </table>
    <%= link_to 'Buy More Credits', new_credit_path, :class => 'btn large primary float_right' %>
  </div>
</div>
