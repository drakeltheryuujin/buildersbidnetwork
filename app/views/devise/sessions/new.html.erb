<div class="row login-page">
  <div class="offset5 span6 form-stacked">
    <div class="login-box">
      <div class="login-head">
        <h2>Log in to your account</h2>
      </div>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= link_to "I forgot my password", new_password_path(resource_name), :class => "label_link" %>
          <%= f.password_field :password %>
        </div>

        <div class="links_field">
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div class="field"><%= f.submit "Log in", :class => "btn large primary" %></div>
      <% end %>
    </div>

    <div class="cta">
      Don't have an account yet?
      <%= link_to "Sign up for a free account.", new_registration_path(resource_name) %><br />
    </div>
  </div>
</div>
