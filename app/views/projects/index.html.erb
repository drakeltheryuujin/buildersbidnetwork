<h1>Listing projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Type</th>
    <th>Bidding End</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= link_to project.name, project %></td>
    <td><%= project.user.email %></td>
    <td><%= project.project_type.name %></td>
    <td><%= project.bidding_end.to_formatted_s(:long) %></td>
    <td><%= link_to 'Edit', edit_project_path(project), :class => 'nav nav-edit' %></td>
    <td><%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete, :class => 'nav nav-destroy' %></td>
  </tr>
<% end %>
</table>

<br />

