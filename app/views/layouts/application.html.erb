<!DOCTYPE html>
<html>
<head>
  <title>YPN</title>
  <%= stylesheet_link_tag "reset", "text", "960", "scaffold", "jquery.lightbox-0.5", "main" %>
  <%= csrf_meta_tag %>
  <link rel="shortcut icon" href="/favicon.ico" />
  <%= yield(:head) %>
</head>
<body>
  <div class="brand_header ">
    <div class="container_12 header_container">
      <h1>
        <%= link_to root_path do %>
          Your<em>Project</em>Network
        <% end %>
      </h1>
      <div class="user_nav">
        <% if user_signed_in? %>
          <%= link_to current_user.email, current_user.profile %> |
		  <%= link_to "Messages", messages_path %> |
		  <%= link_to "Notifications", notifications_path %> (<%= current_user.mailbox.notifications.unread.count %>) |
		  <%= link_to "Credits", credits_path %> (<%= current_user.credits %>) |
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
        <% end %>
      </div>
      <div class="search_nav">
        <%= form_tag("/search", :method => "get") do %>
				  <%= text_field_tag(:q, params[:q]) %>
					<%= radio_button_tag(:section, :projects, (params[:section] ? params[:section] == :projects.to_s : true)) %>
					<%= label_tag(:section_projects, "Projects") %>
					<%= radio_button_tag(:section, :contractors, (params[:section] ? params[:section] == :contractors.to_s : false)) %>
					<%= label_tag(:section_contractors, "Contractors") %>
					<%= radio_button_tag(:section, :developers, (params[:section] ? params[:section] == :developers.to_s : false)) %>
					<%= label_tag(:section_developers, "Developers") %>
				  <%= submit_tag("Search") %>
				<% end %>
      </div>
    </div>
  </div>
  <div id="wrapper" class="container_12">
    <% if notice %><p class="message notice"><%= notice %></p><% end %>
    <% if alert %><p class="message alert"><%= alert %></p><% end %>

    <%= yield %>
  </div>
  <%= javascript_include_tag :defaults, "nested_form" %>
  <%= yield(:javascript) %>
</body>
</html>
