  <div class="span16">
    <h1>
      <%= image_tag "/images/contact_person_icon.png", :alt => "Avatar", :width => "16px", :height => "16px" %>
      My Notifications
    </h1>
    <ul class="tabs">
      <li class="">
        <%= link_to "Activity", track_projects_projects_path %>
      </li>
      <li class="">
        <%= link_to "Account", edit_user_registration_path %>
      </li>
      <li class="active">
        <%= link_to "Notifications", notifications_path %>
      </li>
    </ul>
  </div>
  <div class="span4 ">
    <div class="track_filters ">
      <ul>
        <li class="<%= 'active' if ((current_page? notifications_path) && (! params[:filter])) %>"><%= link_to "All Messages", notifications_path %></li>
        <li class="<%= 'active' if params[:filter] == :unread.to_s %>"><%= link_to "Unread Messages", notifications_path(:filter => :unread) %></li>
        <li class="<%= 'active' if params[:filter] == :trash.to_s %>"><%= link_to "Deleted Messages", notifications_path(:filter => :trash) %></li>
        <li class="<%= 'active' if params[:filter] == :sent.to_s %>"><%= link_to "Sent Messages", notifications_path(:filter => :sent) %></li>
      </ul>
    </div>
  </div>
