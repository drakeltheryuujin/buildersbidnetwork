<%= div_for(message, :class => read_class) do%>
<div class="conversation grid_12 alpha omega">
  <div class="content_left grid_5 alpha">
    <div class="subject">
      <%= truncate(message.subject, :length => 70) %>
    </div>
    <div class="sender_name">
      <%= link_to message.sender.email, message.sender.profile %>
    </div>
    <div class="date">
      <%= time_ago_in_words(message.updated_at) %>
    </div>
  </div>
  <div class="body grid_7 omega">
  	<%= raw(message.body) %>
  </div>
</div>
<% end %>
